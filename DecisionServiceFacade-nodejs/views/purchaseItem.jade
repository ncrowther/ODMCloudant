head
  title Purchase Item
  meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
  link(rel="stylesheet", href="/stylesheets/style.css")

body
        p.
        h1 Purchase Item
        p.

  table
    tr
      td(style= "width:30%;" )
        img(src="/images/shop.jpg")
      td
         div
            form(action='/purchase',method='get')
               table

                  tr
                      td(style= "width:20%;" )
                          label(for='customerId') Customer ID
                      td
                        select(name='customerId')
                          - vals = ['Ned', 'Gus', 'Jim', 'Jan', 'Jem', 'Pam']
                          each item in vals
                             option(value="#{item}") #{item}

                  tr
                      td(style= "width:20%;" )
                          label(for='product') Product
                      td
                        select(name='product')
                          - vals = ['Caffe Americano', 'Caffe Latte', 'Caffe Mocha', 'Cappuccino', 'Caramel Macchiato', 'Espresso']
                          each item in vals
                             option(value="#{item}") #{item}
                             
                  tr
                      td(style= "width:20%;" )
                          label(for='price') Price
                      td
                         input(id='price',name='price', placeholder='Item Price', value='1.10')

                  tr
                      td(style= "width:20%;" )
                          label(for='purchaseDate') Purchase Date
                      td
                          input(id='purchaseDate',type='datetime',name='purchaseDate', placeholder='Report Date', value='2018-01-16T09:00:34.000+0000')

                  tr
                      td
                          input(type='submit',value='Submit',data-transition='fade')

      
